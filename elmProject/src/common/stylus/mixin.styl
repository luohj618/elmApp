border-top-1px( $color )
  position: relative
  &:after
     content: ""
     display: block
     position: absolute
     left: -50%
     top: 0
     width: 200%
     height: 1px
     background-color: $color
     transform: scale(.5,.5)
border-bottom-1px( $color )
  position: relative
  &:before
    content: ""
    display: block
    position: absolute
    left: -50%
    bottom: 0
    width: 200%
    height: 1px
    background-color: $color
    transform: scale(.5,.5)
border-bottom-none()
  &:before
    display none
 bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")



